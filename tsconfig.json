{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": false,
    "incremental": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "paths": {
      "core-ui/*": ["./packages/core-ui/lib/*"],
      "react-odometer/*": ["./packages/react-odometer/lib/*"],
      "themes/*": ["./packages/themes/*"],
      "utils/*": ["./packages/utils/lib/*"],
    },
  },
  "include": [
    "./packages/**/*", "sandbox",
  ],
  "exclude": [
    "**/*/node_modules",
    "**/*/dist",
    "**/*.test.tsx"
  ],
}