{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "es5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false
  },
  "include": [
    "./lib/**/*",
    "./sandbox/**/*"
  ],
  "exclude": [
    "**/*/node_modules",
    "**/*/dist",
    "**/*.test.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}